{
    "name": "Workshop Dev Container",
    "image": "mcr.microsoft.com/devcontainers/javascript-node:latest",
    "features": {
      "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "postCreateCommand": "npm install && npm install -g @adobe/aio-cli",
    "customizations": {
      "vscode": {
        "extensions": [
          "dbaeumer.vscode-eslint",
          "ms-vscode.vscode-typescript-next",
          "ms-vscode-remote.remote-containers"
        ],
        "settings": {
          "workbench.trustedDomains.trustStore": {
            "aio-login.adobeioruntime.net": true
          }
        }
      },
      "codespaces": {
        "repositories": {
          "*": {
            "trusted_domains": [
              "*.githubpreview.dev",
              "*.github.dev"
            ]
          }
        }
      }
    }
}
